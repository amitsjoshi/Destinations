@model List<Destinations.Models.ShowGrid>
<br/>
<br/>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Designation</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@Model[i].FirstName</th>
                <td>@Model[i].LastName</td>
                <td>@Model[i].Designation</td>
                <td>
                    <a data-value="@Model[i].FirstName"
                       href="javascript:void(0)" class="btnEdit">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>